.accordion {
    border: solid 1px #c0c0c0;
    border-bottom: none;
    margin-bottom: .125em;
    position: relative;
}

.accordion-head {
    display: block;
    padding: 0 .5em;
    line-height: 2em;
    cursor: pointer;
    color: inherit;
    text-decoration: none;
    outline: none!important;
    border-bottom: solid 1px #c0c0c0;
}

    .accordion-head:hover {
        background: #dadada;
    }

.collapse {
    -webkit-transition: all 0.3s ease;
    -moz-transition: all 0.3s ease;
    -o-transition: all 0.3s ease;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    height: 0;
    padding: 0 .5em;
}

.expand {
    border-bottom: solid 1px #c0c0c0;
    height: auto;
    padding: 0 .5em;
}

.accordion-horizontal {
    height: 20em;
    border: none;
    overflow: hidden;
    padding-left: 2em;
    padding-right: .5em;
}

    .accordion-horizontal .accordion-head {
        position: absolute;
        bottom: 0;
        top: 100%;
        left: 0;
        height: 2em;
        width: 20em;
        border: solid 1px #c0c0c0;
        -webkit-transform-origin: 0 0;
        -moz-transform-origin: 0 0;
        -ms-transform-origin: 0 0;
        -o-transform-origin: 0 0;
        transform-origin: 0 0;
        -webkit-transform: rotate(-90deg);
        -moz-transform: rotate(-90deg);
        -ms-transform: rotate(-90deg);
        -o-transform: rotate(-90deg);
        transform: rotate(-90deg);
    }



    /*/* ie9 hack to prevent filtered rotation 
        .accordion-horizontal .accordion-head:not(dummy) {
            filter: progid:DXImageTransform.Microsoft.BasicImage(enabled=false);
        }*/

    .accordion-horizontal .accordion-body {
        height: 100%;
    }

    .accordion-horizontal .collapse {
        position: relative;
        overflow: hidden;
        height: 100%;
        width: 0;
        padding: 0;
    }

    .accordion-horizontal .expand {
        border: 1px solid #c0c0c0;
        border-left: none;
        height: 100%;
        /*padding: 0;*/
        width: auto;
    }

